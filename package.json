{
  "name": "book-clip-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "pretest": "npm run lint; cp .gitignore .cursorignore && tree -a -I 'node_modules|.expo|.git|.DS_Store' > docs/DIRECTORY.md",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.cjs",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch --config jest.config.cjs",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --config jest.config.cjs",
    "lint": "npm run lint:fix; npm run ts-prune-check; npm run depcheck-check",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --config eslint.config.js",
    "ts-prune": "ts-prune | grep -v '\\+not-found\\|_layout\\|default\\|IconSymbol'",
    "ts-prune-check": "OUTPUT=$(npm run ts-prune -s); if [ -n \"$OUTPUT\" ]; then echo \"以下の未使用エクスポートが見つかりました:\"; echo \"$OUTPUT\"; exit 1; fi",
    "depcheck": "depcheck --ignores=\"jest-expo,@babel/core,@types/jest,@types/react,@types/react-test-renderer,@testing-library/*,jest,react-test-renderer\" --ignore-dirs=\"node_modules,.expo,assets\" --json",
    "depcheck-check": "OUTPUT=$(npm run depcheck -s); if [ \"$(echo $OUTPUT | jq -r '.dependencies | length')\" -gt 0 ] || [ \"$(echo $OUTPUT | jq -r '.devDependencies | length')\" -gt 0 ]; then echo \"以下の未使用パッケージが見つかりました:\"; echo $OUTPUT | jq '.dependencies, .devDependencies'; exit 1; fi"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/bottom-tabs": "^7.2.1",
    "@react-navigation/native": "^7.0.15",
    "expo": "^52.0.39",
    "expo-blur": "~14.0.3",
    "expo-camera": "^16.0.18",
    "expo-constants": "~17.0.7",
    "expo-file-system": "^18.0.11",
    "expo-font": "~13.0.4",
    "expo-haptics": "~14.0.1",
    "expo-image-manipulator": "^13.0.6",
    "expo-linking": "~7.0.5",
    "expo-media-library": "^17.0.6",
    "expo-router": "^4.0.18",
    "expo-splash-screen": "~0.29.22",
    "expo-status-bar": "~2.0.1",
    "expo-symbols": "~0.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-native": "^0.78.0",
    "react-native-reanimated": "^3.17.1",
    "react-native-safe-area-context": "^5.3.0",
    "react-native-screens": "^4.9.2",
    "react-native-svg": "^15.11.2",
    "react-native-web": "~0.19.13",
    "react-native-webview": "^13.13.4"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-native": "^13.2.0",
    "@types/jest": "^29.5.12",
    "@types/react": "^19.0.10",
    "@types/react-test-renderer": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.22.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.2.1",
    "jest-expo": "~52.0.4",
    "react-test-renderer": "^19.0.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.3"
  },
  "private": true
}
